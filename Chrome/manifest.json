{
  "manifest_version": 2,

  "name": "SIMS Easy Button",
  "version": "0.2.0",
  
  "icons": {
	"16": "icons/icon16.png",
	"48": "icons/icon48.png",
	"128": "icons/icon128.png"
  },
	
  "browser_action": {
    "default_icon": {
		"19": "icons/icon19.png",
		"38": "icons/icon38.png"
	}
  },
  "background": {
	"scripts": ["background.js"],
	"persistent": false
  },
  "options_page": "options.html",
  "permissions": ["https://*/*", "http://*/*", "tabs", "storage"]
}
